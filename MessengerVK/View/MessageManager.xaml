<Window x:Class="MessengerVK.MessageManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:helpers="clr-namespace:MessengerVK.Helpers"
      
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MessageManager"
        AllowDrop="True"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        WindowStyle="None"
        helpers:DialogCloser.DialogResult="{Binding CloseWindowFlag}"
        mc:Ignorable="d">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="3">
            <Button Width="32"
                    Height="32"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{Binding Path=Close}">
                <Button.Background>
                    <ImageBrush ImageSource="https://www.iconfinder.com/icons/27842/download/png/256" />
                </Button.Background>
            </Button>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />

                </Grid.ColumnDefinitions>
                <TextBox Grid.Row="0"
                         Grid.Column="0"
                         Text="Search Friend" />
                <Button Grid.Row="0"
                        Grid.Column="1"
                        Content="Search" />

            </Grid>
            <Button Grid.Row="1"
                    Grid.Column="0"
                    Command="{Binding Path=WriteMessage}"
                    Content="Write Message" />

        </Grid>
        <ListView Grid.Row="2"
                  Grid.RowSpan="2"
                  Grid.Column="0"
                  ItemsSource="{Binding Path=FriendsList}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  SelectedIndex="{Binding Path=IndexSelectedFriend,
                                          Mode=TwoWay}">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn>
                        <GridViewColumnHeader Visibility="Hidden" />
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image MinWidth="100"
                                       MaxHeight="100"
                                       Source="{Binding Path=Avatar}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Path=Name}">
                        <GridViewColumnHeader Visibility="Hidden" />
                    </GridViewColumn>
                    <GridViewColumn Width="200" DisplayMemberBinding="{Binding Path=Online}">
                        <GridViewColumnHeader Visibility="Hidden" />
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <WebBrowser Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    helpers:WebBrowserHelper.Body="{Binding Path=MyHtml}" />
        <Grid Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                        Command="{Binding Path=SaveToWordFile}"
                        Content="Save"
                        Style="{StaticResource ButtonStyle}" />
                <Button Grid.Row="1"
                        Command="{Binding Path=DeleteWordFile}"
                        Content="Delete"
                        Style="{StaticResource ButtonStyle}" />
            </Grid>


        </Grid>
        <Grid Grid.Row="3" Grid.Column="1">
           </Grid>
        <Grid Grid.Row="3" Grid.Column="2">
            <Button Content="Send" Style="{StaticResource ButtonStyle}" />
        </Grid>
    </Grid>
</Window>

